{
  "name": "@rahul-choudhury/create-react-app-extras",
  "version": "0.1.0",
  "description": "Set up deployment, linting, and editor configuration for React apps",
  "type": "module",
  "bin": {
    "create-react-app-extras": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev": "bun --watch ./src/index.ts",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@types/node": "^22.10.10"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1"
  },
  "license": "MIT"
}
